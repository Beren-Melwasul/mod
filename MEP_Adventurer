JOB_TITLES: 
job_adventurer = {
	is_adventurer = yes
	is_voter = yes
	attribute = diplomacy
	dignity = 0.5
	opinion_effect = 15
	
	monthly_salary = 0.5	
	monthly_prestige = 0.5	
	
	allow = {
		can_be_chancellor_trigger = yes
		liege = {
			culture = ROOT
		}
		OR = {
			AND = {
				is_adult = yes
			}
		}
		mep_never_councillor_trigger = yes
	}
	dismiss_trigger = {
		FROM = {
			NOT = { 
				AND = {
					has_law = succession_voting_power_1
					ROOT = { is_powerful_vassal = yes }
				}
			}
		}
	}
	gain_effect = {
	}
	lose_effect = {
		opinion = { who = FROM modifier = opinion_fired_from_council }
		opinion = { who = FROM modifier = opinion_recently_fired }
	}
	retire_effect = {
	}
	action = action_spread_tensions
	action = action_colonize_province

	lift_fow = yes
}


JOB_ACTIONS : 
# Adventurer
action_spread_tensions = {
attribute = diplomacy
	
	trigger = {
		any_province_lord = {
			NOT = { character = FROM }
			NOT = { is_liege_or_above = FROM }
		}
		NOT = { 
			any_province_lord = {
				character = FROM
			}
		}
		is_within_diplo_range = FROM
		num_of_settlements = 1
	}

	events = { 08111996 190713 008 }
}

action_colonize_province = {
attribute = diplomacy

	potential = {
		FROM = {
			is_feudal = yes
		}
	}

	trigger = {
		any_province_lord = {
			character = FROM
		}
		NOT = { culture = FROM }
	}
	
	events = { 007 008 }
}
